# AGUADA Gateway OTA - Configuração padrão para ESP32 DevKit v1

# Partition table for OTA (two app partitions)
CONFIG_PARTITION_TABLE_TWO_OTA=y

# WiFi
CONFIG_WIFI_SSID="luciano"
CONFIG_WIFI_PASSWORD="Luciano19852012"

# Backend
CONFIG_BACKEND_HOST="192.168.0.117"
CONFIG_BACKEND_PORT=3000

# ESP-NOW
CONFIG_ESPNOW_CHANNEL=11

# Gateway mode (0=primary, 1=repeater)
CONFIG_GATEWAY_MODE=0
CONFIG_GATEWAY_MODE_PRIMARY=y

# Primary gateway MAC (for repeater mode)
CONFIG_PRIMARY_GATEWAY_MAC="80:f1:b2:50:2e:c4"

# Logging
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_MAXIMUM_LEVEL_DEBUG=y

# HTTP Client
CONFIG_ESP_HTTP_CLIENT_ENABLE_HTTPS=y
CONFIG_ESP_HTTP_CLIENT_ENABLE_BASIC_AUTH=n

# OTA
CONFIG_BOOTLOADER_APP_ROLLBACK_ENABLE=y

# FreeRTOS
CONFIG_FREERTOS_HZ=1000

# Watchdog
CONFIG_ESP_TASK_WDT_TIMEOUT_S=30

# Flash size (4MB for DevKit v1)
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
