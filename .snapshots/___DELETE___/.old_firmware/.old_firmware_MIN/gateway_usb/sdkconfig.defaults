# AGUADA Gateway USB - Configuração padrão
# Target: ESP32-C3 (ou ESP32)

# Flash
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_ESPTOOLPY_FLASHMODE_DIO=y

# Partição simples
CONFIG_PARTITION_TABLE_SINGLE_APP=y

# Log level (INFO para debug, pode mudar para WARN em produção)
CONFIG_LOG_DEFAULT_LEVEL_INFO=y

# WiFi (para ESP-NOW)
CONFIG_ESP_WIFI_STATIC_RX_BUFFER_NUM=8
CONFIG_ESP_WIFI_DYNAMIC_RX_BUFFER_NUM=16
CONFIG_ESP_WIFI_TX_BUFFER_TYPE=0
CONFIG_ESP_WIFI_STATIC_TX_BUFFER_NUM=8

# ESP-NOW
CONFIG_ESP_WIFI_ESPNOW_MAX_ENCRYPT_NUM=0

# FreeRTOS
CONFIG_FREERTOS_HZ=1000

# Console/UART (importante para USB Serial)
CONFIG_ESP_CONSOLE_UART_DEFAULT=y
CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200

# USB CDC (para ESP32-C3 com USB nativo)
CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG=n
